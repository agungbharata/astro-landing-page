---
import { Icon } from "astro-icon";
import ContentSection from "~/components/content-section.astro";

import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Islamic History",
    description:
      "Mengungkap fakta sejarah kegemilangan dunia Islam di masa lalu yang selama ini terkuburkan",
    icon: "mdi:star-crescent",
  },
  {
    title: "New Experience",
    description:
      "Memberi pengalaman baru bagi muslim lintas generasi untuk menyelami dunia Islam lebih dalam",
    icon: "mdi:safety-goggles",
  },
  {
    title: "Exclusive Moment",
    description:
      "Acara expo pertama di Indonesia yang mengangkat tema sejarah dunia Islam yang jarang diungkap",
    icon: "mdi:shield-lock-open-outline",
  },
  {
    title: "Live Interaction",
    description:
      "Bukan hanya expo, tapi juga acara talkshow bersama narasumber terkemuka dari lintas generasi",
    icon: "mdi:account-voice",
  },
  {
    title: "Creativity Space",
    description:
      "Platform bagi generasi muda untuk menyalurkan ide dan bertindak untuk perubahan yang positif.",
    icon: "mdi:palette",
  },
  {
    title: "Community",
    description:
      "Bersinergi dan membangun jaringan bersama komunitas muslim dari berbagai generasi",
    icon: "mdi:account-group",
  },
];
---

<ContentSection title="Rajab Special Moment" id="intro">
  <Icon slot="eyebrow" name="logomark" class="h-32" />
  <Fragment slot="lead">
    Sebuah event expo yang menyuguhkan berbagai pertunjukan
    <span class="text-primary">nostalgia</span> dan
    <span class="text-primary">sejarah peradaban Islam</span>
  </Fragment>
  <div class="my-7">
    <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
      {
        features.map(({ title, description, icon }) => (
          <li class="flex flex-col items-center gap-4 border border-default bg-offset p-12">
            <div class="h-16 w-16 rounded-full border-2 border-current p-3">
              <Icon name={icon} />
            </div>
            <p class="text-center font-extrabold text-xl">{title}</p>
            <p class="text-center text-offset text-sm">{description}</p>
          </li>
        ))
      }
    </ul>
  </div>
  <div class="mt-5 grid grid-cols-1 gap-2 sm:grid-cols-2">
    <a
      href="https://docs.astro.build/"
      class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4"
    >
      <Icon pack="mdi" name="telescope" class="h-8" />
      <span>Read the docs</span>
    </a>
    <a
      href="https://astro.new/"
      class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4"
    >
      <Icon pack="mdi" name="rocket" class="h-8" />
      <span>Try it out</span>
    </a>
  </div>
</ContentSection>
